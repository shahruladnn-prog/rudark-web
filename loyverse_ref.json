        "/inventory": {
            "get": {
                "summary": "Get Inventory Levels",
                "description": "Fetch inventory levels for specific variants.",
                "security": [
                    {
                        "bearerAuth": []
                    },
                    {
                        "oauth2": [
                            "INVENTORY_READ"
                        ]
                    }
                ],
                "parameters": [
                    {
                        "name": "variant_ids",
                        "in": "query",
                        "description": "Comma-separated list of variant IDs",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "cursor",
                        "in": "query",
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Inventory levels",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "inventory_levels": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "variant_id": {
                                                        "type": "string"
                                                    },
                                                    "store_id": {
                                                        "type": "string"
                                                    },
                                                    "in_stock": {
                                                        "type": "number"
                                                    },
                                                    "updated_at": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Batch Update Inventory",
                "description": "Update inventory levels for multiple variants.",
                "security": [
                    {
                        "bearerAuth": []
                    },
                    {
                        "oauth2": [
                            "INVENTORY_WRITE"
                        ]
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "inventory_levels": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "variant_id": {
                                                    "type": "string",
                                                    "format": "uuid"
                                                },
                                                "store_id": {
                                                    "type": "string",
                                                    "format": "uuid"
                                                },
                                                "stock_after": {
                                                    "type": "number"
                                                }
                                            },
                                            "required": [
                                                "variant_id",
                                                "store_id",
                                                "stock_after"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Inventory updated successfully"
                    }
                }
            }
        },
